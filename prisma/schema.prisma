generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Listing {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  location    String
  address     String
  city        String
  type        String   // hostel, PG, flat, mess
  amenities   String[]
  images      String[]
  contactName String
  contactPhone String
  contactEmail String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  coordinates Coordinates?
}

type Coordinates {
  latitude  Float
  longitude Float
}
